            <form class="modal-content animate" method="post" action="/signup">
    
                <div class="imgcontainer">
                    <img src="./avatar.jpg" alt="Avatar" class="avatar">
                    <h1 style="text-align:center">Sign up Form</h1>
                    <span class="close" title="Close PopUp">&times;</span>

                </div>
            
                <div class="container">

                    <input type="text" value="<%= qs.uname %>" name="uname">
                    <input type="password" value="<%= qs.psw %>" name="psw">
                    <input type="text" placeholder="Enter Email" name="email"> 
                    <p style="color: red; padding: 12px 20px; margin: 8px 26px;">Invalid email!</p>       
                    <button type="submit" id='SignBtn'>Sign up</button>
