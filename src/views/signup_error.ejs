    <body class="noStand">
        <header>
            <div class="logo">
                <a class="logo-link" href="./index.html">
                <img src="./logo.png" alt="UEFA Champions League" title="UEFA Champions League">
                </a>
                
            </div>
            <nav class="topnav" id="myTopnav">
                <div class="dropdown">
                    <a href="#" class="active">HOME</a>
                    <div class="dropdown-content">
